<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            aria-describedby="search-button" value={{ keyword }}>
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
          <a href="/restaurants/new" class="btn btn btn-success ml-4">添加新餐廳</a>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Alert when search result is empty -->
{{#if searchAlert}}
<div class="search-alert container mt-4">
  <div class="alert alert-primary alert-dismissible fade show" role="alert">
    <strong>抱欺...</strong> 輸入的關鍵字找不到餐廳
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>
{{/if}}

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-11 col-12 mx-auto">
      <div class="row row-cols-3">
        {{#each restaurants}}
        <div class="mb-5">
          <a href="/restaurants/{{ this._id }}" class="text-secondary">
            <div class="card mb-2 mx-2">
              <img class="card-img-top" src={{ this.image }} alt={{ this.name }}>
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{ this.name }}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{ this.category }}
                </div>

                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{ this.rating }}
                  <i class="fas fa-star fa-xs"></i>
                </span>

              </div>
            </div>
          </a>
          <div class="d-flex justify-content-end">
            <a href="/restaurants/{{ this._id }}/edit" class="mx-2 mt-1">Edit</a>
            <a href="/restaurants/{{ this._id }}" class="mx-2 mt-1">Detail</a>
            <button type="button" class="btn btn-sm btn-outline-danger mx-2">Delete</button>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>